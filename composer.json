{
    "name": "sigwin/ariadne",
    "description": "Find the common thread in your Git repos labyrinth",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "knplabs/github-api": "^3.9",
        "m4tthumphrey/php-gitlab-api": "^11.0",
        "nyholm/psr7": "^1.8",
        "symfony/console": "^7.0",
        "symfony/expression-language": "^7.0",
        "symfony/framework-bundle": "^7.0",
        "symfony/http-client": "^7.0",
        "symfony/options-resolver": "^6.4 || ^7.0",
        "symfony/runtime": "^7.0",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "sigwin/infra": "~1.7.0"
    },
    "conflict": {
        "nikic/php-parser": "< 4.14"
    },
    "autoload": {
        "psr-4": {
            "Sigwin\\Ariadne\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sigwin\\Ariadne\\Test\\": "tests/"
        }
    },
    "bin": [
        "bin/ariadne"
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/runtime": true
        }
    },
    "extra": {
        "runtime": {
            "autoload_template": "config/autoload_runtime.php.template"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "APP_ENV=prod APP_DEBUG=0 php bin/ariadne"
        ]
    }
}
